{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "outDir": "dist",                      
    "rootDir": "src",                     
    "noEmitOnError": true 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
